[colors]
foreground = #FFFFFF
background = #282828
beige      = #C6C5B9
blue       = #62929E
dark-blue  = #3F4A54
red        = #885053
green      = #596F62
pink       = #9B7C94

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 30
foreground = ${colors.foreground}
background = ${colors.background}00
enable-ipc = true
border-bottom-size = 0
border-left-size = 5
border-right-size = 5
bottom = true

font-0 = Fira Mono:size=10;1
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=12;2
font-2 = Font Awesome 5 Brands:style=Regular:pixelsize=12;2

; ;;;;; Modules ;;;;;;; ;
modules-left = power battery wired wireless sound
modules-center = i3
modules-right = previous playpause next spotify date time

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = ture
wrapping-scroll = false
enable-click = true
cursor-click = pointer

fuzzy-match = true
pin-workspaces = true
strip-wsnumbers = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

; Focused label
label-focused            = %name%
#label-focused-background = ${colors.blue}
label-focused-foreground = ${colors.foreground}
label-border-bottom-color=#FFFFFF
label-focused-padding    = 2

; Unfocused labels
label-unfocused             = %icon%
#label-unfocused-background  = ${colors.background}
label-unfocused-foreground  = ${colors.foreground}
label-unfocused-padding     = 2

; Visible labels
label-visible            = %name%
#label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding    = 2

; Urgent labels
label-urgent            = %name%
label-urgent-foreground = ${colors.red}
#label-urgent-background = ${colors.background}
label-urgent-padding    = 2

[module/time]
type = internal/date
; Update interval
interval = 1.0
; Format
time = %I:%M%P
; Label
label            = %time%
label-foreground = ${colors.foreground}
#label-background = ${colors.green}
label-padding    = 2

[module/date]
type = internal/date

; Update interval
interval = 1.0

; Format
date = %A, %d %B

; Label
label            = %date%
label-foreground = ${colors.foreground}
#label-background = ${colors.green}
label-padding    = 2
#format-prefix = "    "

[module/battery]
type = internal/battery

; Full battery level
full-at = 95

; Battery and adapter
battery = BAT0
adapter = AC

; Charging label
label-charging            = %{F#f5d11d}%{F-} %percentage%%
#label-charging-background = ${colors.background}
label-charging-foreground = ${colors.foreground}
label-charging-padding    = 3

; Discharging label
format-discharging           = <ramp-capacity><label-discharging>
label-discharging            = %percentage%%
#label-discharging-background = ${colors.background}
label-discharging-foreground = ${colors.foreground}
label-discharging-padding    = 3

#ramp-capacity-background = ${colors.background}
ramp-capacity-foreground = ${colors.foreground}
ramp-capacity-padding-left = 3
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Full label
label-full            =  100%
#label-full-background = ${colors.background}
label-full-foreground = ${colors.foreground}
label-full-padding    = 2

